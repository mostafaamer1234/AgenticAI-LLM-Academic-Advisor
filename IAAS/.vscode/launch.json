{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "LLMAcadamic-Advisor/api/api.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true,
      "autoStartBrowser": false
    },
    {
      "command": "npm start",
      "name": "Run npm start",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/client"
    },
    {
      "command": "node server.js",
      "name": "Run server.js",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/client/server"
    },
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/client"
    }
  ],
  "compounds": [
    {
      "name": "start client, chrome, and flask",
      "configurations": [
        "Run npm start",
        "Run server.js",
        "Launch Chrome",
        "Python Debugger: Flask"
      ]
    }
  ]
}
